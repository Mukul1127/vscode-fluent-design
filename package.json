{
	"name": "vscode-fluent-design",
	"type": "module",
	"displayName": "VSCode Fluent Design",
	"description": "Fluent Design Language Patch for VSCode",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Themes",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Mukul1127/vscode-fluent-design"
	},
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-fluent-design.install",
				"title": "Fluent Design: Install"
			},
			{
				"command": "vscode-fluent-design.reinstall",
				"title": "Fluent Design: Reinstall"
			},
			{
				"command": "vscode-fluent-design.uninstall",
				"title": "Fluent Design: Uninstall"
			}
		],
		"configuration": {
			"title": "Fluent Design",
			"type": "object",
			"properties": {
				"vscode-fluent-design.enableWallpaper": {
					"type": "boolean",
					"default": false,
					"description": "Enable background image",
					"scope": "application"
				},
				"vscode-fluent-design.wallpaperPath": {
					"type": "string",
					"default": "C:\\Windows\\Web\\Wallpaper\\Windows\\img0.jpg",
					"description": "Path to image. By default, it will use the default Windows 11 wallpaper for the Windows light theme.",
					"scope": "application"
				},
				"vscode-fluent-design.accent": {
					"type": "string",
					"default": "#005fb8",
					"description": "Accent color (default #005fb8). Only HEX values are supported.",
					"scope": "application"
				},
				"vscode-fluent-design.darkBackground": {
					"type": "string",
					"default": "#202020",
					"description": "Background color for dark mode (default #202020). Only HEX values are supported.",
					"scope": "application"
				},
				"vscode-fluent-design.lightBackground": {
					"type": "string",
					"default": "#ffffff",
					"description": "Background color for light mode (default #ffffff). Only HEX values are supported.",
					"scope": "application"
				}
			}
		}
	},
	"scripts": {
		"dev": "echo 'Open extension.ts in VSCode and then run your extension with F5",
		"compile": "bun ./esbuild.ts",
		"watch": "bun ./esbuild.ts --watch",
		"package": "bun compile --production && vsce package",
		"clean": "rm -rf dist && rm -f vscode-fluent-design-*.vsix",
		"check": "tsc --noEmit",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"assist": "biome check --write --formatter-enabled=false --linter-enabled=false",
		"all": "tsc --noEmit && biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/bun": "1.2.18",
		"@types/vscode": "1.93.0",
		"@vscode/vsce": "3.6.0",
		"esbuild": "0.25.6",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"sharp": "0.34.3"
	}
}
