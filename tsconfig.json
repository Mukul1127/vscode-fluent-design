{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",

    "strict": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    "paths": {
      "@src/*": ["./src/*"],
      "@packageJson": ["./package.json"]
    },

    "isolatedModules": true
  },
  "include": [
    "src",
    "scripts",
    "eslint.config.ts",
    "prettier.config.ts",
    "rslib.config.ts"
  ],
  "exclude": ["node_modules/**", "dist/**", "*.vsix"]
}
