{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules/**/*", "dist/**/*", "*.vsix"],
  "include": ["src/**/*", "eslint.config.ts", "prettier.config.ts", "esbuild.config.ts", "esbuild.ts"]
}
