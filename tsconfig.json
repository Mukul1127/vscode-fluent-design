{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",

    "strict": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,

    "paths": {
      "/*": ["./*"]
    },

    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "eslint.config.ts",
    "prettier.config.ts",
    "esbuild.config.ts",
    "esbuild.ts"
  ],
  "exclude": ["node_modules/**/*", "dist/**/*", "*.vsix"]
}
