{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",

    "strict": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,

    "paths": {
      "@src/*": ["./src/*"],
      "@packageJson": ["./package.json"]
    },

    "isolatedModules": true
  },
  "include": ["src/**/*", "eslint.config.ts", "prettier.config.ts", "rslib.config.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*", "*.vsix"]
}
